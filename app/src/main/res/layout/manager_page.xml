<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/manager_login_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Enter The password"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/et_manager_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/manager_log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:text="Log In"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/manger_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="10">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Edit Food Prices:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout style="@style/layout_menu_price">

            <TextView
                style="@style/menu_price_text"
                android:text="Breakfast:" />

            <EditText
                android:id="@+id/et_breakfast_price"
                style="@style/menu_price_value" />
        </LinearLayout>

        <LinearLayout style="@style/layout_menu_price">

            <TextView
                style="@style/menu_price_text"
                android:text="Lunch:" />

            <EditText
                android:id="@+id/et_lunch_price"
                style="@style/menu_price_value" />
        </LinearLayout>

        <LinearLayout style="@style/layout_menu_price">

            <TextView
                style="@style/menu_price_text"
                android:text="Dinner:" />

            <EditText
                android:id="@+id/et_dinner_price"
                style="@style/menu_price_value" />
        </LinearLayout>

        <LinearLayout style="@style/layout_menu_price">

            <TextView
                style="@style/menu_price_text"
                android:text="Special Items:" />

            <EditText
                android:id="@+id/et_special_item_price"
                style="@style/menu_price_value" />
        </LinearLayout>

        <Button
            android:id="@+id/button_reset_price"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Make Changes"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark">

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_reset_password"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Change Settings"
            android:textColor="#ffffff" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_edit_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="4dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            style="@style/manager_page_setting_text"
            android:text="Old Password" />

        <EditText
            android:id="@+id/et_old_password"
            style="@style/manager_page_setting_edit_text" />
            <TextView
                style="@style/manager_page_setting_text"
                android:text="New Password" />
            <EditText
                android:id="@+id/et_new_password"
                style="@style/manager_page_setting_edit_text" />
            <TextView
                style="@style/manager_page_setting_text"
                android:text="Re-enter New Password " />
            <EditText
                android:id="@+id/et_new_password_repeated"
                style="@style/manager_page_setting_edit_text" />

        <Button
            android:id="@+id/button_change_password"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"
            android:padding="4dp"
            android:text="Change Password"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent"></LinearLayout>
        <Button
            android:id="@+id/failed_transaction_lister"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:background="@color/colorPrimaryDark"
            android:padding="8dp"
            android:text="PENDING TRANSACTIONS"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/stop_background_service"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#f51f26"
            android:padding="8dp"
            android:layout_weight="2"
            android:text="STOP BACKGROUND SERVICES"
            android:textColor="#ffffff" />


    </LinearLayout>
</LinearLayout>
