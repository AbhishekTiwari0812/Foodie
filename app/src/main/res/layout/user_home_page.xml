<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="20">

    <!--User dp and name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dummy_user" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="Welcome\nUsername"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_weight="0.5"
        android:text="You're here for..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimaryDark" />

    <LinearLayout style="@style/user_profile_button_layout">

        <Button
            style="@style/user_profile_button"
            android:text="Breakfast" />

        <TextView
            android:id="@+id/plus0"
            style="@style/plus_button" />

        <TextView
            android:id="@+id/minus0"
            style="@style/minus_button" />

        <TextView
            android:id="@+id/tv_breakfast_price"
            style="@style/user_profile_price_tag"
            android:text="$3.99/-" />
    </LinearLayout>

    <LinearLayout style="@style/user_profile_button_layout">

        <Button
            style="@style/user_profile_button"
            android:text="Lunch" />

        <TextView
            android:id="@+id/plus1"
            style="@style/plus_button" />

        <TextView
            android:id="@+id/minus1"
            style="@style/minus_button" />


        <TextView
            android:id="@+id/tv_lunch_price"
            style="@style/user_profile_price_tag"
            android:text="$6.99/-" />
    </LinearLayout>

    <LinearLayout style="@style/user_profile_button_layout">

        <Button
            style="@style/user_profile_button"
            android:text="Dinner" />

        <TextView
            android:id="@+id/plus2"
            style="@style/plus_button" />

        <TextView
            android:id="@+id/minus2"
            style="@style/minus_button" />


        <TextView
            android:id="@+id/tv_dinner_price"
            style="@style/user_profile_price_tag"
            android:text="$7.99/-" />
    </LinearLayout>

    <LinearLayout style="@style/user_profile_button_layout">

        <Button
            style="@style/user_profile_button"
            android:text="Extra" />

        <TextView
            android:id="@+id/plus3"
            style="@style/plus_button" />

        <TextView
            android:id="@+id/minus3"
            style="@style/minus_button" />

        <TextView
            android:id="@+id/tv_special_item_price"
            style="@style/user_profile_price_tag"
            android:text="$1.99/-" />
    </LinearLayout>


    <Button
        android:id="@+id/button_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="0.5"
        android:background="@color/colorPrimary"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Take a pic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_confirm_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="0.5"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Confirm"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

</LinearLayout>
